<Window x:Class="AP_Project_4022.SigninPage.verifyEmailPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP_Project_4022.SigninPage"
        mc:Ignorable="d"
        Title="verifyEmailPage" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="verify email" FontSize="30" HorizontalAlignment="Center" Height="64" Margin="0,10,0,0" VerticalAlignment="Top" Width="164"/>
        <Label Content="enter code that has been sent to your email:" FontSize="20" HorizontalAlignment="Center" Height="43" Margin="0,121,0,0" VerticalAlignment="Top" Width="412"/>
        <TextBox Name="verifyCodeTextBox" HorizontalAlignment="Center" FontSize="20" Height="47" Margin="0,217,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="411"/>
        <Button Name="continueButton" Content="continue" FontSize="20" HorizontalAlignment="Center" Height="41" Margin="0,339,0,0" VerticalAlignment="Top" Width="248" Click="continueButton_Click"/>

    </Grid>
</Window>
