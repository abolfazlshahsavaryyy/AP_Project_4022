<Window x:Class="AP_Project_4022.RestaurantPages.RemoveFood"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP_Project_4022.RestaurantPages"
        mc:Ignorable="d"
        Title="RemoveFood" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Text="Remove Food" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray" />
        <TextBlock Grid.Row="1" Text="Enter Food ID: " VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="22"/>
        <TextBox x:Name="txtId" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="60" Margin="10"  TextAlignment="Left" FontSize="15"/>
        <Button x:Name="btnRemove" Grid.Row="2" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="50" Content="Remove" FontSize="20" Click="btnRemove_Click"/>
    </Grid>
</Window>
